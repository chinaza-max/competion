
<body>
    <div class="login-div">
        <div class="logo"></div>
        <div class="title">Bright mind</div>
        <form action="/login" method="POST" autocomplete="off">
            <div class="fields">
                <div class="username"><input type="email" class="user-input" name="email" placeholder="User Name" required/></div>
                <div class="password"><input type="password" class="user-input" name="password" placeholder="Password" required/></div>
            </div>
            <button class="signin-button">Login</button>
            <div class="diplayError">
                {{#if messages.error}}
                {{messages.error}}
                {{/if }}
            </div>
            <div class="link">
                <a href="/code">Forget password</a> or <a href="/">Sign up</a>
            </div>
        </form>
    </div>
</body>  
</html>